//Extend a layout for all pages?

block styles
    link(rel="stylesheet", href="/stylesheets/style.css")

block content



div.row
    div.two-col
        div.main-block
            h1 Add to Portfolio
            form(action="/", method="POST")
                label(for='ticker') Ticker
                input(type="text", name="ticker", id="ticker", placeholder="AC.TO", required)
                label(for="shares") Shares
                input(type="number", name="shares", id="shares", placeholder="1", min="1", required)
                hr
                //<div>
                //<p>{{ message }}</p>
                //</div>
                div.btn-block
                    button(type="submit") Add

    <!--  View Portfolio-->
    div.two-col
        div.main-block
            h1 My Portfolio
            div.table-block
                table.center
                    thead
                        tr
                            th Ticker
                            th Shares
                            th
                    tbody
                    each stock in current_portfolio
                        tr
                            td #{stock.ticker}
                            td #{stock.shares}
                            td
                                form(action="/delete", method="POST")
                                    input(type='hidden', name="deletes", id="deletes", value= stock.ticker)
                                    div.btn-block
                                        button(type="submit") Delete



<!--  Analyze button-->
form(action="/view" method="POST")
div.analyze-block
    form(action="/view", method="POST")
        div.btn-block
            button(type="submit") Analyze Portfolio




